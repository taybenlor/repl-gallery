<!doctype html>
<html class="no-js" lang="">
<head>
  <meta charset="utf-8">
  <title>REPL Gallery</title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="#ffffff">

  <link href="./style.css" rel="stylesheet">
</head>

<body class="bg-blue-100">
  <header class="bg-blue-800">
    <div class="container mx-auto py-4 flex flex-col md:flex-row justify-between align-bottom">
      <div class="m-4 sm:m-0">
        <h1 class="font-bold text-2xl lg:text-4xl mb-2 text-white">REPL Gallery</h1>
      </div>
      <div class="m-4 sm:m-0">
        <label class="text-white font-bold mr-4">
          Search
          <input id="search" class="text-black ml-2 p-2" placeholder="" name="search">
        </label>

        <button id="random" class="py-2 px-4 font-bold bg-white text-blue-600">
          Random Pick
        </button>
      </div>
    </div>
  </header>
  <main class="container mx-auto my-8 flex justify-between flex-wrap">
    {% for project in projects %}
      <a data-search="{{project.author_name}} {{project.title}}" class="w-full sm:w-[300px] md:w-[360px] lg:w-[480px] xl:w-[380px] 2xl:w-[360px] flex flex-col h-full bg-white p-4 mb-8 shadow" href="./projects/{{ project.author_name }}/{{ project.id }}/index.html">
        <img class="w-full" alt="Poster" src="{{ project.poster_url if project.poster_url else project.thumbnail_url }}">
        <h1 class="w-full font-bold mt-2">{{ project.title }}</h1>
        <h2 class="text-gray-800">{{ project.author_name }}</h2>
      </a>
    {% endfor %}
  </main>
  <script src="./main.ts"></script>
</body>

</html>
